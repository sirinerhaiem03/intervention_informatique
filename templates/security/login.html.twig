{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}
{% block content %}
<style>
    body {
        background: #f7fbe8;
    }
    .login-container {
        max-width: 400px;
        margin: 60px auto;
        padding: 32px 28px 24px 28px;
        background: #fcfff5;
        border-radius: 16px;
        box-shadow: 0 4px 24px rgba(164,198,57,0.10);
        border: 1.5px solid #a4c639;
        position: relative;
    }
    .login-icon {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 12px;
    }
    .login-icon svg {
        width: 48px;
        height: 48px;
        fill: #a4c639;
    }
    .login-container h1 {
        text-align: center;
        margin-bottom: 24px;
        color: #a4c639;
        font-weight: 700;
    }
    .login-container label {
        display: block;
        margin-bottom: 6px;
        color: #6a8a1a;
        font-weight: 500;
    }
    .login-container input[type="text"],
    .login-container input[type="password"] {
        width: 100%;
        padding: 10px 12px;
        margin-bottom: 18px;
        border: 1.5px solid #a4c639;
        border-radius: 6px;
        background: #f9fbe7;
        font-size: 16px;
        transition: border 0.2s, box-shadow 0.2s;
    }
    .login-container input:focus {
        border-color: #a4c639;
        box-shadow: 0 0 0 2px #eaf7c1;
        outline: none;
        background: #fff;
    }
    .login-container button[type="submit"] {
        width: 100%;
        padding: 12px;
        background: linear-gradient(90deg, #a4c639 0%, #d0e97a 100%);
        color: #fff;
        border: none;
        border-radius: 6px;
        font-size: 18px;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.2s, box-shadow 0.2s;
        box-shadow: 0 2px 8px rgba(164,198,57,0.10);
        text-shadow: 0 1px 2px rgba(100,100,100,0.10);
    }
    .login-container button[type="submit"]:hover {
        background: linear-gradient(90deg, #8ebf1b 0%, #eaf7c1 100%);
        color: #333;
        box-shadow: 0 4px 16px rgba(164,198,57,0.15);
    }
    .login-container .error-message {
        color: #6a8a1a;
        background: #f7fbe8;
        border: 1.5px solid #a4c639;
        border-radius: 4px;
        padding: 8px 12px;
        margin-bottom: 18px;
        text-align: center;
        font-size: 15px;
        font-weight: 500;
    }
</style>
<div class="login-container">
    <div class="login-icon">
        <svg viewBox="0 0 24 24"><path d="M12 12c2.7 0 8 1.34 8 4v2H4v-2c0-2.66 5.3-4 8-4zm0-2a4 4 0 1 0 0-8 4 4 0 0 0 0 8z"/></svg>
    </div>
    <h1>Connexion</h1>
    {% if error %}
        <div class="error-message">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form action="{{ path('app_login') }}" method="post">
        <label for="username">Email :</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" required autofocus>

        <label for="password">Mot de passe :</label>
        <input type="password" id="password" name="_password" required>

        <button type="submit">Se connecter</button>
    </form>
</div>
{% endblock %}
