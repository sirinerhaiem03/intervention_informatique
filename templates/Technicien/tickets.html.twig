{% extends 'Technicien/basetech.html.twig' %}

{% block title %}Tous les tickets (Technicien){% endblock %}

{% block content %}
    <style>
        body {
            background-color: #f4f6f9;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .tickets-wrapper {
            margin: 40px auto;
            max-width: 1100px;
            background: #ffffff;
            border-radius: 16px;
            box-shadow: 0 0 18px rgba(0, 0, 0, 0.1);
            padding: 32px 24px;
        }

        .tickets-title {
            text-align: center;
            color: #4e944f;
            font-size: 28px;
            font-weight: bold;
            margin-bottom: 30px;
        }

        .table th {
            background-color: #4e944f;
            color: #fff;
            font-weight: bold;
            text-align: center;
        }

        .table td {
            vertical-align: middle;
            text-align: center;
        }

        .badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 13px;
            font-weight: bold;
        }

        .badge-priorite-basse {
            background-color: #6ab04c;
            color: white;
        }

        .badge-priorite-moyenne {
            background-color: #e6b800;
            color: white;
        }

        .badge-priorite-haute {
            background-color: #eb4d4b;
            color: white;
        }

        .badge-statut-en_attente {
            background-color: #e67e22;
            color: white;
        }

        .badge-statut-en_cours {
            background-color: #3498db;
            color: white;
        }

        .badge-statut-resolu {
            background-color: #2ecc71;
            color: white;
        }

        .btn-outline-primary {
            border: 2px solid #4e944f;
            color: #4e944f;
            transition: all 0.3s ease;
            font-weight: bold;
        }

        .btn-outline-primary:hover {
            background-color: #4e944f;
            color: white;
        }
    </style>



<div class="tickets-wrapper">
    <h2 class="tickets-title">Tous les tickets</h2>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Demandeur</th>
                <th>Statut</th>
                <th>Priorité</th>
                <th>Date création</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for ticket in tickets %}
            <tr>
                <td>{{ ticket.idTicket }}</td>
                <td>{{ ticket.titre }}</td>
                <td>{{ ticket.utilisateur.nom }} {{ ticket.utilisateur.prenom }}</td>
                <td>
                    <span class="badge badge-statut-{{ ticket.statut.name|lower }}">
                        {{ ticket.statut.value }}
                    </span>
                </td>
                <td>
                    <span class="badge badge-priorite-{{ ticket.priorite.value|lower }}">
                        {{ ticket.priorite.value }}
                    </span>
                </td>
                <td>{{ ticket.dateCreation ? ticket.dateCreation|date('d/m/Y H:i') : '' }}</td>
                <td>
                    <a href="{{ path('technicien_ticket_show', {id: ticket.idTicket}) }}" class="btn btn-sm btn-outline-primary">Voir</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7" class="text-center">Aucun ticket trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
